<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TripApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="noActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="DarkButtonStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/plusjakartasans_bold</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/plusjakartasans_regular</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:colorControlActivated">@color/black</item>
        <item name="android:colorControlHighlight">@color/black</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:colorFocusedHighlight">@color/black</item>
    </style>

    <style name="TextInputLayout" parent="Theme.MaterialComponents.DayNight">
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="TitleTextStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/plusjakartasans_bold</item>
    </style>

    <style name="SubTitleTextStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/plusjakartasans_regular</item>
    </style>

    <style name="TextStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="fontFamily">plusjakartasans_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>